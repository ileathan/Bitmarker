<div class="Grid TweetForwardTimeline">
  <div ng-style="selected_style"
       sglclick="markPost(post)"
       ng-dblclick="getSelected(post, $event)" ng-repeat="post in posts  | reverse | filter: search_posts track by $index"
       ng-if="!(selected_style && (post._id != state_cookie))" Class="Grid-cell">
    <div style="background:
        radial-gradient(farthest-corner, rgb({{$parent.calculateRedValue(post.marks,1)}}, {{255-post.marks*22}}, {{$parent.calculateBlueValue(post.marks,1)}}),
        rgb({{$parent.calculateRedValue(post.marks, 2)}}, {{255-(post.marks-35)*22}}, {{$parent.calculateBlueValue(post.marks, 2)}})); display: inline-block"
        class="tweet js-stream-tweet js-actionable-tweet js-profile-popup-actionable original-tweet js-original-tweet has-cards has-content"
        ng-style="selected_style" id="workaround">
      <div class="content">
        <div class="AdaptiveMediaOuterContainer">
          <div class="AdaptiveMedia-container">
            <div class="AdaptiveMedia-singlePhoto">
              <div class="AdaptiveMedia-photoContainer js-adaptive-photo "data-image-url="" data-element-context="platform_photo_card">
                <img data-aria-label-part ng-src="" alt="" style="width: 100%; top: -0px;">
              </div>
            </div>
          </div>
        </div>
        <div class="stream-item-header">
          <a href="/users/{{ post.username }}" data-user-id="759251">
            <img class="avatar js-action-profile-avatar" ng-src="/uploads/{{post.username}}" alt="">
            <strong>{{ post.username }}</strong>
          </a>
          <span class="username js-action-profile-name" data-aria-label-part>&nbsp;</span>
          <small class="time">
            <span class="_timestamp">{{ post.date | amTimeAgo }}</span>
          </small>
          <div class="js-tweet-text-container">
            <p class="TweetTextSize  js-tweet-text tweet-text">{{ post.post }}</p>
          </div>
          <div class="stream-item-footer">
            <div class="ProfileTweet-actionList js-actions" role="group" aria-label="Tweet actions">
              <div class="ProfileTweet-action ProfileTweet-action--reply">
                <button class="ProfileTweet-actionButton">
                  <span class="Icon Icon--reply"></span>
                </button>
              </div>
              <div class="ProfileTweet-action ProfileTweet-action--favorite js-toggleState">
                <button class="ProfileTweet-actionButton">
                  <div class="HeartAnimation"></div>
                  <div class="IconTextContainer"></div>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div ng-click="exitReply()" stop-event="click" ng-show="selected_style" style="float: right;" class="x flop medium"><b></b><b></b><b></b><b></b></div>
      </div>
    </div>
  </div>
</div>