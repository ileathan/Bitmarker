<div class="Grid TweetForwardTimeline">
  <div ng-style="selected_style"
       ng-click="!isDisabled && select(post, $event)" ng-repeat="post in posts  | reverse | filter: search_posts track by $index"
       ng-if="post.message && !(selected_style && (post._id != state_cookie)) && (!post.replyto || selected_style)" Class="Grid-cell">
      <div ng-style="post_style([selected_style,post_glow(post)])" style="display: inline-block;"
           class="tweet js-stream-tweet js-actionable-tweet js-profile-popup-actionable original-tweet js-original-tweet has-cards has-content">
        <div class="content">
          <div class="AdaptiveMediaOuterContainer">
            <div class="AdaptiveMedia-container">
              <div class="AdaptiveMedia-singlePhoto">
                <div class="AdaptiveMedia-photoContainer js-adaptive-photo "data-image-url="" data-element-context="platform_photo_card">
                  <img data-aria-label-part ng-src="" alt="" style="width: 100%; top: -0px;">
                </div>
              </div>
            </div>
          </div>
          <div class="stream-item-header">
            <a href="/users/{{ post.username }}" data-user-id="759251">
              <img class="avatar js-action-profile-avatar" ng-src="/uploads/{{post.username}}" alt="">
              <strong>{{ post.username }}</strong>
            </a>
            <span class="username js-action-profile-name" data-aria-label-part>&nbsp;</span>
            <small class="time">
              <span class="_timestamp">{{ post.date | amTimeAgo }}</span>
            </small>
            <div class="js-tweet-text-container">
              <p class="TweetTextSize  js-tweet-text tweet-text">{{ post.message }}</p>
            </div>
            <div class="stream-item-footer">
              <div style="float:right" class="">
                <div ng-click="back(post); $event.stopPropagation()" ng-show="selected_style" style="float: right;" class="x flop medium"><b></b><b></b><b></b><b></b></div>
                <button ng-click="!isDisabled && (message_needed = true) && $event.stopPropagation()" type="button" class="btnMark"
                        onmouseout="this.childNodes[1].style.transform = 'rotate(0deg)'" onmouseover="this.childNodes[1].style.transform = 'rotate(45deg)'">
                  <span class="iconMark"></span><span class="markAmnt">{{post.marks}}</span>
                </button>
              </div>
              <textarea style="float: right; resize: none" ng-model="$parent.$parent.$parent.$parent.marking_msg" ng-if="message_needed" auto-focus
                        ng-blur="$parent.message_needed=false; disableClicks(); mark(post)"
                        ng-keyup="$event.keyCode == 13 && !$event.shiftKey && !($parent.message_needed=false) && mark(post)" placeholder="Reason? (This may be left blank)">
              </textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
